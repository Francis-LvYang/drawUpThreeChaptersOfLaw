{
    "defaultSeverity": "warning",
    "extends": ["tslint:recommended", "tslint-config-standard", "tslint-config-alloy", "tslint-config-prettier"],
    "linterOptions": {
      "exclude": ["**/node_modules/**"]
    },
    "rulesDirectory": ["node_modules/tslint-jsdoc-rules/lib"],
    "rules": {
        "jsdoc-require": [true, [""]],
        "no-implicit-dependencies": [true, ["@"]],
        "quotemark": [true, "double"],
        "semicolon": [true, "always"],
        "indent": [true, "spaces", 2],
        "interface-name": false,
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "no-consecutive-blank-lines": false,
        "no-empty-interface": false,
        "no-import-side-effect": false,
        "object-literal-shorthand": false,
        "no-trailing-whitespace": [true, ["ignore-comments", "ignore-jsdoc", "ignore-template-strings", "ignore-blank-lines"]],
        "space-within-parens": false,
        "no-magic-numbers": false,
        "prefer-for-of": false,
        "one-variable-per-declaration": false,
        "no-this-assignment": false,
        "cyclomatic-complexity": false,
        "no-redundant-jsdoc": false
    }
}